   xmlns:vor="http://www.ivoa.net/xml/RegistryInterface/v0.1"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xmlns:xs="http://www.w3.org/2001/XMLSchema" 
